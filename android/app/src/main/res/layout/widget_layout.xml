<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    tools:background="#00F"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="end">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Тохсунньу"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:gravity="end"
        tools:text="Тохсунньу" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:background="#ff0000"
            android:orientation="vertical"
            android:gravity="bottom|end"
            android:layout_marginRight="8dp">

            <ImageView
                android:id="@+id/sun"
                android:src="@android:drawable/star_on"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:fontFamily="sans-serif-light"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:text="8:45" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:fontFamily="sans-serif-light"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:text="16:02" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:text="6:03" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:background="#ff00ff"
            android:orientation="vertical"
            android:gravity="bottom|end"
            android:layout_marginRight="8dp">

            <ImageView
                android:id="@+id/moon"
                android:src="@android:drawable/star_on"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:fontFamily="sans-serif-light"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:text="8:45" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:fontFamily="sans-serif-light"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:text="16:02" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:text="6:03" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:background="#00ffff"
            android:gravity="bottom|right"
            android:layout_weight="0.2">


            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-light"
                android:textSize="12dp"
                android:gravity="end"
                android:text="Сэрэдэ, 22" />

            <TextView
                android:id="@+id/summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:maxLines="3"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:gravity="right"
                android:text="Сүллүүкүннэр киирэллэр, таҥха түмүктэнэр. Бу күн былытырдаҕына, өҥ сайыны күүтэллэр. Сүллүүкүннэр киирэллэр, таҥха түмүктэнэр. Бу күн былытырдаҕына, өҥ сайыны күүтэллэр" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>