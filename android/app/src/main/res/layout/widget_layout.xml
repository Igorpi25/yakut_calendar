<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    tools:background="#00F"
    android:background="#2000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_width="110dp"
    tools:layout_height="40dp"
    android:orientation="vertical"
    android:gravity="end"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:background="#ff0000"
            android:orientation="vertical"
            android:gravity="bottom|center_horizontal"
            android:layout_marginRight="8dp">

            <ImageView
                android:id="@+id/sun_icon"
                tools:src="@android:drawable/star_big_off"
                android:layout_margin="4dp"
                android:layout_width="18dp"
                android:layout_height="18dp"/>

            <TextView
                android:id="@+id/sun_rise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#ffffff"
                android:textSize="14dp"
                tools:text="8:45" />

            <TextView
                android:id="@+id/sun_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#ffffff"
                android:textSize="14dp"
                tools:text="16:02" />

            <TextView
                android:id="@+id/sun_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#ffffff"
                android:textSize="14dp"
                tools:text="6:03" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:background="#ff00ff"
            android:orientation="vertical"
            android:gravity="bottom|center_horizontal"
            android:layout_marginRight="8dp">

            <ImageView
                android:id="@+id/moon_icon"
                tools:src="@android:drawable/ic_menu_rotate"
                android:layout_margin="4dp"
                android:layout_width="18dp"
                android:layout_height="18dp"/>

            <TextView
                android:id="@+id/moon_rise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#ffffff"
                android:textSize="14dp"
                tools:text="8:45" />

            <TextView
                android:id="@+id/moon_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#ffffff"
                android:textSize="14dp"
                tools:text="16:02" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:background="#00ffff"
            android:gravity="top|right"
            android:layout_weight="0.2">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:gravity="end"
                android:text=""
                tools:text="Тохсунньу" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-light"
                android:textSize="14dp"
                android:gravity="end|center_vertical"
                android:text=""
                tools:text="Сэрэдэ, 22" />

            <TextView
                android:id="@+id/summary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:gravity="top|right"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="14dp"
                tools:text="Сүллүүкүннэр киирэллэр, таҥха түмүктэнэр. Бу күн былытырдаҕына, өҥ сайыны күүтэллэр. Сүллүүкүннэр киирэллэр, таҥха түмүктэнэр. Бу күн былытырдаҕына, өҥ сайыны күүтэллэр" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>